{
  "name": "logwell",
  "private": true,
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "dev": "bun --bun run vite dev",
    "build": "bun --bun run vite build",
    "preview": "bun --bun run vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "knip": "knip",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down -v",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run scripts/seed-admin.ts",
    "test": "vitest",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:component": "vitest run --project component",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "sdk:test": "bun run --cwd sdks/typescript test",
    "sdk:build": "bun run --cwd sdks/typescript build",
    "sdk:lint": "bun run --cwd sdks/typescript lint",
    "sdk:version": "bun run --cwd sdks/typescript npm version"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@electric-sql/pglite": "^0.3.14",
    "@internationalized/date": "^3.10.0",
    "@playwright/test": "^1.57.0",
    "@sveltejs/kit": "^2.49.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@vitest/browser": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "bits-ui": "^2.15.1",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.0",
    "jsdom": "^27.4.0",
    "knip": "^5.79.0",
    "mode-watcher": "^1.1.0",
    "svelte": "^5.45.6",
    "svelte-adapter-bun": "^1.0.1",
    "svelte-check": "^4.3.4",
    "svelte-sonner": "^1.0.7",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@lucide/svelte": "^0.561.0",
    "better-auth": "^1.4.10",
    "clsx": "^2.1.1",
    "nanoid": "^5.1.6",
    "postgres": "^3.4.7",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.3.4"
  }
}
